<section class="section" data-section-id="{{ section.id }}" data-section-type="html">
  <div class="container">
    {%- if section.settings.title != blank -%}
    <header class="section__header">
      <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>
    </header>
    {%- endif -%}

    <div class="html rte">
      {{ section.settings.html }}
    </div>
    {% for block in section.blocks %}
    {% case block.type %}
    {% when "@app" %}
    {% render block %}
    {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
"name": "Custom HTML",
"settings": [
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Your title"
},
{
"type": "html",
"id": "html",
"label": "HTML",
"default": "<p>Write or copy/paste HTML code</p>"
}
],
"blocks": [
{
"type": "@app"
}
],
"presets": [
{
"category": "Generic Modules",
"name": "Custom HTML"
}
]
}
{% endschema %}